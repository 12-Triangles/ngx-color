{
  "compilerOptions": {
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "es2015",
    "target": "es2015",
    "outDir": "../../../dist/packages-dist/helpers",
    "rootDir": ".",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": false,
    "removeComments": true,
    "lib": ["es2015", "dom"],
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "files": ["index.ts"],
  "compileOnSave": false,
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableSummariesForJit": true,
    "annotationsAs": "static fields"
  }
}
