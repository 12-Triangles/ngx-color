{
  "$schema": "../../../node_modules/ng-packagr/package.schema.json",
  "name": "ngx-color",
  "version": "0.0.0-placeholder",
  "description":
    "A Collection of Color Pickers from Sketch, Photoshop, Chrome & more",
  "dependencies": {
    "@ctrl/tinycolor": "^2.6.0",
    "material-colors": "^1.2.6"
  },
  "peerDependencies": {
    "@angular/core": ">=8.0.0",
    "@angular/common": ">=8.0.0"
  },
  "bugs": "https://github.com/scttcper/ngx-color/issues",
  "homepage": "https://github.com/scttcper/ngx-color",
  "repository": "scttcper/ngx-color",
  "license": "MIT",
  "ngPackage": {
    "lib": {
      "entryFile": "public_api.ts",
      "umdModuleIds": {
        "@ctrl/tinycolor": "@ctrl/tinycolor",
        "ngx-color": "ngx-color"
      }
    },
    "whitelistedNonPeerDependencies": ["@ctrl/tinycolor", "material-colors"],
    "dest": "../../../dist/common"
  },
  "keywords": [
    "angular",
    "color picker",
    "angular-component",
    "colorpicker",
    "picker",
    "sketch",
    "chrome",
    "photoshop",
    "material design",
    "popup"
  ]
}
