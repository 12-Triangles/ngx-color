{
  "extends": "./tsconfig-build.json",
  "compilerOptions": {
    "target": "es2015",
    "outDir": "../../../dist/packages-dist/es5",
    "declaration": false,
    "removeComments": true
  },
  "files": [
    "public_api.ts"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableSummariesForJit": true,
    "flatModuleOutFile": "index.js",
    "flatModuleId": "ngx-color"
  }
}
